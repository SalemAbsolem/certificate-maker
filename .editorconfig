# Общие настройки для всех файлов
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Настройки для JavaScript и TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Настройки для JSON
[*.json]
indent_size = 2

# Настройки для HTML
[*.html]
indent_size = 2

# Настройки для CSS и SCSS
[*.{css,scss}]
indent_size = 2

# Настройки для PHP
[*.php]
indent_size = 4

# Настройки для Markdown
[*.md]
trim_trailing_whitespace = false